{
    "name": "Go",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "extensions": [
        "golang.go",
        "GitHub.copilot-chat"
    ],
    "settings": { 
        "go.gopath": "/go",
        "go.toolsGopath": "/go",
        "go.useLanguageServer": true,
        "go.formatTool": "gofmt",
        "go.lintTool": "golint",
        "go.lintFlags": [
            "--fast"
        ]
    },
    "forwardPorts": [8080],
    "remoteUser": "vscode"
}
